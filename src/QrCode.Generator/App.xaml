<Application x:Class="QrCode.Generator.Builder.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:QrCode.Generator.ViewModels"
             xmlns:c="clr-namespace:QrCode.Generator.Controls"
             Startup="Application_Startup"
             Exit="Application_Exit">
  <Application.Resources>
    <DataTemplate DataType="{x:Type TypeName=vm:ContactDataViewModel}">
      <c:ContactDataControl />
    </DataTemplate>
    <DataTemplate DataType="{x:Type TypeName=vm:EventCodeViewModel}">
      <c:EventCodeControl />
    </DataTemplate>
    <DataTemplate DataType="{x:Type TypeName=vm:WifiCodeViewModel}">
      <c:WifiCodeControl />
    </DataTemplate>
    <DataTemplate DataType="{x:Type TypeName=vm:GiroCodeViewModel}">
      <c:GiroCodeControl />
    </DataTemplate>
  </Application.Resources>
</Application>
